extends ../../pug/base/base
append vars
    - lang = "de"
    - currentPage = 'login'
    - baseDir = lang == "en" ? baseDir : "../"
    - title = titles.login[lang]
    - link.favicon = baseDir + "favicon/favicon.ico"
    - link.appleTouchIcon = baseDir + "favicon/apple-touch-icon.png"
    - link.appleTouchIcon152x152 = baseDir + "favicon/apple-touch-icon-152x152.png"
    - link.appleTouchIcon167x167 = baseDir + "favicon/apple-touch-icon-167x167.png"
    - link.appleTouchIcon180x180 = baseDir + "favicon/apple-touch-icon.png"
    - link.manifest = baseDir + "favicon/site.webmanifest"
    - meta.themeColor = "#ffffff"

append styles
    link(rel="stylesheet" href=`${baseDir}assets/css/forms.min.css`)

block header
    include ../../pug/blocks/forms/loginForm.pug

block content
    include ../../pug/blocks/forms/info.pug
    include ../../pug/blocks/forms/twoAuthForm.pug


//- append scripts (если нужно добавить ссылку на скрипты после базовой)
prepend scripts
