extends ../../pug/base/base
include ../../pug/mixins/marketGraphMixin
include ../../pug/mixins/marketTableMixin
include ../../pug/mixins/marketProfitsMixin

append vars
	- lang = "de"
	- currentPage = 'indices'
	- baseDir = lang == "en" ? baseDir : "../"
	// - baseDir = "../"
	- title = titles.indices[lang]
	- link.favicon = baseDir + "favicon/favicon.ico"
	- link.appleTouchIcon = baseDir + "favicon/apple-touch-icon.png"
	- link.appleTouchIcon152x152 = baseDir + "favicon/apple-touch-icon-152x152.png"
	- link.appleTouchIcon167x167 = baseDir + "favicon/apple-touch-icon-167x167.png"
	- link.appleTouchIcon180x180 = baseDir + "favicon/apple-touch-icon.png"
	- link.manifest = baseDir + "favicon/site.webmanifest"
	- meta.themeColor = "#ffffff"

//- prepend styles (если нужно добавить ссылку на стили до базовой)
append styles
	link(rel="stylesheet" href=`${baseDir}assets/css/markets.min.css`)

block header
	include ../../pug/blocks/indices/indicesHeader.pug

block content
	+marketProfits(indicesProfitsText)
	//include ../../pug/blocks/indices/indicesProfits.pug
	include ../../pug/blocks/indices/indicesAssets.pug
	+marketTable("index")
	+marketGraph("index")

//- append scripts (если нужно добавить ссылку на скрипты после базовой)
prepend scripts
	<script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
